    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger.%method:%line - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="default"/>
        <appender-ref ref="console"/>
    </root>

</configuration>